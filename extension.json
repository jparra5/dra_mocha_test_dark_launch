            "default_value": "",
            "label_key": "COVERAGE_LOG_FILE_KEY",
            "desc_key": "COVERAGE_LOG_FILE_DESC"
        },
        {
            "name": "MINIMUM_COVERAGE_RATE",
            "type": "Text",
            "required": "false",
            "default_value": "",
            "label_key": "MINIMUM_COVERAGE_RATE_KEY",
            "desc_key": "MINIMUM_COVERAGE_RATE_DESC"
        },
        {
            "name": "CHECK_COVERAGE_REGRESSION",
            "type": "Checkbox",
            "required": "false",
