            "default_value": "false",
            "label_key": "CHECK_TEST_REGRESSION_KEY",
            "desc_key": "CHECK_TEST_REGRESSION_DESC"
        },
        
        
        {
            "name": "COVERAGE_TOOL_SELECT",
            "type": "Select",
            "required": "false",
            "default_value": "none",
            "label_key": "COVERAGE_TOOL_SELECT_KEY",
            "desc_key": "COVERAGE_TOOL_SELECT_DESC",
            "options": [
                {
                    "label_key": "COVERAGE_TOOL_OPTION_1_KEY",
