            "default_value": "none",
            "label_key": "TEST_TOOL_SELECT_KEY",
            "desc_key": "TEST_TOOL_SELECT_DESC",
            "options": [
                {
                    "label_key": "TEST_TOOL_OPTION_1_KEY",
                    "value": "none"
                },
                {
                    "label_key": "TEST_TOOL_OPTION_2_KEY",
                    "value": "mocha"
                },
                { 
                    "label_key": "TEST_TOOL_OPTION_3_KEY",
                    "value": "mochaKarma" 
                }
            ]
        },
        {
            "name": "TEST_LOG_FILE",
