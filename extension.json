{
    "id": "ibm.devops.services.pipeline.dra_mocha_test_dark_launch",
    "version": 1,
    "name_key": "ExtName",
    "desc_key": "ExtDesc",
    "extension_type": "Test",
    "message_key": "ExtMessage",
